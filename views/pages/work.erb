<div class="span9">

  <h1 class="page-header"><%= work.title %></h1>
  <p class="lead"><%= work.slug %></p>
  <p class="lead"><%= work.date %></p>
    <!-- Button to trigger modal -->
  <a href="#image_popup" role="button" class="thumbnail pull-right" data-toggle="modal">
    <img src="<%= work.image('640') %>" class="ajb-img-work-main span5" alt=""/>
  </a>

  <p><small><%= work.media.join(", ") %></small></p>

  <!-- Modal -->
  <div id="image_popup" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="popup_label" aria-hidden="true">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h5 id="popup_label"><%= work.title %></h5>
    </div>
    <div class="modal-body">
      <img src="<%= work.image('640') %>" class="ajb-img-work-popup" alt="" />
    </div>
    <div class="modal-footer">
      <!--<button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>-->
    </div>
  </div>

  <% work.notes.each do |p| %>
    <p><%= p %></p>
  <% end %>

  <hr />
</div>

<hr />

<% work_sub_images = work.images('260')[1..-1] %>
<% if work_sub_images.size > 0 %>
  <h5></h5>
<% end %>
<% work_sub_images.each_slice(4) do |r| # breaks into rows %>
  <div class="row span9">
    <ul class="thumbnails">
      <% r.each do |image| # row cells %>
        <li class="span2">
          <div class="thumbnail">
            <img src="<%= image %>" />
            <h6 class="thumb-label">Duuuude.</h6>
          </div>
        </li>
      <% end %>
    </div>
  </ul>
<% end %>